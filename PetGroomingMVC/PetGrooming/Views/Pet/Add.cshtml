
@{
    ViewBag.Title = "Add";
}

<h2>Add a New Pet</h2>

<form method="POST" action="/Pet/Add">

    <div>Name:</div><input id="PetName" type="text" name="PetName"/> 
    <div>Weight:</div><input id="PetWeight" type="text" name="PetWeight"/>
    <div>Color:</div><input id="PetColor" type="text" name="PetColor"/>
    <div>Notes:</div><input id="PetNotes" type="text" name="PetNotes"/>
    <div><input type="submit" value="Add Pet"></div>
</form>

